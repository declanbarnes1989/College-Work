<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/gradiantbg"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Leaderboard">


    <ListView
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:gravity="right"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:id="@+id/listView"
        android:layout_gravity="right"
        android:layout_alignParentEnd="true"
        android:choiceMode="none"
        tools:listitem="@android:layout/simple_list_item_2"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logout_btn"
        android:background="@drawable/buttonshapemain"
        android:shadowColor="#91191D"
        android:shadowDx="2"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/listView"
        android:layout_centerHorizontal="true" />

</RelativeLayout><!-- From: file:/Users/declanbarnes/Desktop/Project/SamplePHPAPIProject1/app/src/main/res/layout/leaderboard.xml -->