@model IEnumerable<The_GameStore.Models.Game>

@{
    ViewBag.Title = "Games";
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<h2>Games</h2>

<div id="GamesSoon">
    @Ajax.ActionLink(
    "Click here to see whats coming soon!",
    "ComingSoon",
    new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "GamesSoon",
    }

    )
    </div>
    <div id="GamesSoon">
        <b>This is text that will be replaced by the contents of partial view.</b>
    </div>

    <p>
        <b>
            @Html.ActionLink("Create New", "Create")
        </b>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfRelease)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfRelease)
                </td>
                <td>
                    <div id="Edit">
                        @Html.ActionLink("Edit", "Edit", new { id = item.GameId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.GameId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.GameId })
                    </div>
                </td>
            </tr>
        }

    </table>
